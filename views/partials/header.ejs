<h1>The Jobs EJS Application</h1>

<% if (user) { %>
   
    <p style="font-size:20px; color:blue;">
      User <span style="text-transform: capitalize; "><%= user.name %></span> is logged on.
    </p>

    <form method="POST" action="/sessions/logoff">

      <input type="hidden" name="_csrf" value="<%= _csrf %>">

      <button style="font-size: 18px; padding: 10px 15px;">
        Logoff
      </button>
      
    </form>



<% } %>

<% if (errors) {
    errors.forEach((err) => { %>
      <div style="color:red;font-size:18px;">
        Error: <%= err %>
      </div>
    <% })
  } %>
  
  <% if (info) {
    info.forEach((msg) => { %>
      <div style="color: green; font-size:18px;">
        Info: <%= msg %>
      </div>
    <% })
  } %>

<hr />